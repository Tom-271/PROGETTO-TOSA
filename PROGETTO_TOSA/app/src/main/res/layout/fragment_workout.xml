<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_marginTop="20dp"

    android:layout_height="match_parent">

    <TextView
        android:id="@+id/text_workout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="Workout"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Button 1 in posizione originale di item1 -->
    <Button
        android:id="@+id/btnItem1"
        android:layout_width="260dp"
        android:layout_height="140dp"
        android:text="SOLLEVAMENTO PESI"
        android:backgroundTint="@color/dark_gray"
        android:elevation="60dp"
        android:translationZ="8dp"
        app:layout_constraintTop_toBottomOf="@id/text_workout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.066"/>

    <!-- Button 2 in posizione originale di item2 -->
    <Button
        android:id="@+id/btnItem2"
        android:layout_width="260dp"
        android:layout_height="140dp"
        android:text="CORPO LIBERO"
        android:backgroundTint="@color/green"
        android:elevation="60dp"
        android:translationZ="8dp"
        app:layout_constraintTop_toBottomOf="@id/btnItem1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.94"/>

    <!-- Button 3 in posizione originale di item3 -->
    <Button
        android:id="@+id/btnItem3"
        android:layout_width="260dp"
        android:layout_height="140dp"
        android:text="CARDIO"
        android:elevation="60dp"
        android:translationZ="8dp"
        android:backgroundTint="@color/purple_700"
        app:layout_constraintTop_toBottomOf="@id/btnItem2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.066"/>

    <!-- Button 4 in posizione originale di item4 -->
    <Button
        android:id="@+id/btnItem4"
        android:layout_width="260dp"
        android:layout_height="140dp"
        android:text="STRETCHING"
        android:elevation="60dp"
        android:translationZ="8dp"
        android:backgroundTint="@color/orange"
        app:layout_constraintTop_toBottomOf="@id/btnItem3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.94"/>

</androidx.constraintlayout.widget.ConstraintLayout>
